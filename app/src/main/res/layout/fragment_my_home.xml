<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.theroglu.owlme.FriendsFragment">


    <LinearLayout
        android:layout_weight="0.5"

        android:id="@+id/CountryLinearLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/AgeHeader"
        android:text="Find Friends From Different Countries"
        android:padding="5dp"
        android:background="@android:color/holo_orange_dark"
        android:paddingBottom="10dp"
        android:paddingTop="15dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        />


    <Spinner

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/CountrySelectSpinner"
        android:entries="@array/country_arrays"
        >

    </Spinner>


    <Button
        android:background="@color/wallet_holo_blue_light"
        android:id="@+id/CountrySelectButtonHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Find Friends Now!"/>

    </LinearLayout>


    <LinearLayout
        android:layout_weight="0.5"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/LanguageLearnHeader"
        android:text="Which Language Do You Want to Learn?"
        android:padding="5dp"
        android:background="@android:color/holo_green_light"
        android:paddingBottom="10dp"
        android:paddingTop="15dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        />


    <Spinner

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/LanguageSelectSpinner"
        android:entries="@array/language_arrays"
        >

    </Spinner>


    <Button
        android:background="@color/wallet_holo_blue_light"
        android:id="@+id/LanguageSelectButtonHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Find Friends Now!"/>

     </LinearLayout>


</LinearLayout>

